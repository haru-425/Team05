/**
 * @brief フルスクリーンクワッド描画用の頂点シェーダー出力データ構造体
 *
 * ポストプロセスや2D描画などで画面全体にエフェクトをかける際に使用される、
 * フルスクリーンクワッドの各頂点からピクセルシェーダーへ渡すデータを定義します。
 */
struct VS_OUT
{
    /**
     * @brief クリッピング空間上の頂点座標
     *
     * SV_POSITIONセマンティクスを持ち、ラスタライザやピクセルシェーダーで使用されます。
     */
    float4 position : SV_POSITION;

    /**
     * @brief テクスチャ座標（UV座標）
     *
     * 0〜1の範囲で、テクスチャサンプリングや画面上の位置判定に利用されます。
     */
    float2 texcoord : TEXCOORD;
};

/**
 * @brief 時間情報をシェーダーに渡す定数バッファ
 *
 * アニメーションや時間経過によるエフェクト制御のため、
 * アプリケーション側から現在の経過時間（秒）を渡します。
 */
cbuffer TimeCBuffer : register(b5)
{
    /**
     * @brief 経過時間（秒）
     *
     * シェーダー内でアニメーションや時間制御に利用されます。
     */
    float iTime;

    /**
     * @brief 予備のパディング用変数
     *
     * メモリアライメントや将来の拡張のために確保されています。
     */
    float3 pud;
}